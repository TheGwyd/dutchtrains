/*
* PURCHASE
*/

spriteset(spriteset_emu_Mat46ELD4_olive_purchase, "gfx/purchase/emu/Mat46ELD4_olive.png") {
	template_purchase(0, 0)
}
spriteset(spriteset_emu_Mat46ELD4_green_red_purchase, "gfx/purchase/emu/Mat46ELD4_green_red.png") {
	template_purchase(0, 0)
}
