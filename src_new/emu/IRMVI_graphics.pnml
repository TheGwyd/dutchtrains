switch(FEAT_TRAINS, PARENT, switch_emu_IRMVI_autolivery, date_of_last_service) {
	0..date(2017,2,1): switch_emu_IRMVI_original_position;
    switch_emu_IRMVI_renewal_position;
}

switch(FEAT_TRAINS, SELF, switch_emu_IRMVI_purchaselivery, build_year) {
	0..2016: switch_emu_IRMVI_original_position;
