/*
* LIVERY SELECTION
*/

switch(FEAT_TRAINS, PARENT, switch_steam_HSM501_autolivery, date_of_last_service) {
	0..date(1919,12,31): switch_steam_HSM501_position;
    switch_steam_NS2100_position;
}

switch(FEAT_TRAINS, PARENT, switch_steam_HSM501_purchaselivery, build_year) {
	0..1919: switch_steam_HSM501_position;
    switch_steam_NS2100_position;
}

switch(FEAT_TRAINS, SELF, switch_steam_HSM501_livery, cargo_subtype) {
	1: switch_steam_HSM501_purchaselivery;
    2: switch_steam_HSM501_position;
    3: switch_steam_NS2100_position;
    switch_steam_HSM501_autolivery;
}

// CARGO SUBTYPE CALLBACK
switch(FEAT_TRAINS, SELF, switch_steam_HSM501_subtype_text, cargo_subtype) {
    0: return string(str_cargo_subtype_auto);
	1: return string(str_cargo_subtype_purchase);
    2: return string(str_cargo_subtype_HSM);
    3: return string(str_cargo_subtype_NS);
    return CB_RESULT_NO_TEXT;
}

/*
* ARTICULATED VEHICLE CALLBACK
*/

switch(FEAT_TRAINS, SELF, switch_steam_HSM501_articulated, extra_callback_info1) {
    1: return item_steam_HSM501;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

/*
* VEHICLE LENGTH CALLBACK
*/

switch(FEAT_TRAINS, SELF, switch_steam_HSM501_length, (position_in_vehid_chain % 2)) {
    1: return 4;
    return 5;
}

/*
* VISUAL EFFECT AND POWERED CALLBACK
*/

switch(FEAT_TRAINS, SELF, switch_steam_HSM501_visual_effect_and_powered, (position_in_vehid_chain % 2)) {
    1: return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
    return visual_effect_and_powered(VISUAL_EFFECT_STEAM, -3, DISABLE_WAGON_POWER);
}
