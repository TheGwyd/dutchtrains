}

switch(FEAT_TRAINS, SELF, switch_emu_IRMVI_livery, cargo_subtype) {
	1: switch_emu_IRMVI_purchaselivery;
    2: switch_emu_IRMVI_original_position;
    3: switch_emu_IRMVI_renewal_position;
    //4: switch_emu_ICM4_olympic_position;
    switch_emu_IRMVI_autolivery;
}

// CARGO SUBTYPE CALLBACK
switch(FEAT_TRAINS, SELF, switch_emu_IRMVI_subtype_text, cargo_subtype) {
    0: return string(str_cargo_subtype_auto);
	1: return string(str_cargo_subtype_purchase);
    2: return string(str_cargo_subtype_original);
    3: return string(str_cargo_subtype_renewal);
    return CB_RESULT_NO_TEXT;
    
}

/*
* ARTICULATED VEHICLE CALLBACK
*/

switch(FEAT_TRAINS, SELF, switch_emu_IRMVI_articulated, extra_callback_info1) {
    1..5: return item_emu_IRMVI;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

/*
* VISUAL EFFECT AND POWERED CALLBACK
*/

switch(FEAT_TRAINS, SELF, switch_emu_IRMVI_visual_effect_and_powered, (position_in_vehid_chain % 6)) {
    2: return visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, 0, DISABLE_WAGON_POWER);
    return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_emu_IRMVI_capacity_build_year, build_year) {
    0..2016: return 100;
    return 103;
}

switch(FEAT_TRAINS, SELF, switch_emu_IRMVI_capacity_current_year, current_year) {
    0..2016: return 100;
    return 103;
}

switch(FEAT_TRAINS, SELF, switch_emu_IRMVI_capacity, cargo_subtype) {
    0: switch_emu_IRMVI_capacity_current_year;
	1: switch_emu_IRMVI_capacity_build_year;
    2: return 100;
    3: return 103;
}
