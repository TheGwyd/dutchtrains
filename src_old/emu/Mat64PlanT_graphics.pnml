}
spriteset(spriteset_emu_Mat64PlanT_yellow_middle_1, "gfx/emu/PlanT.png") {
	template_2cc_88(1, 160)
}
spriteset(spriteset_emu_Mat64PlanT_yellow_middle_2, "gfx/emu/PlanT.png") {
