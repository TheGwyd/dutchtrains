/*
* PURCHASE
*/

spriteset(spriteset_steam_HSM501_purchase, "gfx/purchase/steam/HSM501.png") {
	template_purchase(0, 0)
}

spriteset(spriteset_steam_NS2100_purchase, "gfx/purchase/steam/NS2100.png") {
	template_purchase(0, 0)
}

switch(FEAT_TRAINS, SELF, switch_steam_HSM501_livery_purchase, current_year) {
	0..1919: spriteset_steam_HSM501_purchase;
    spriteset_steam_NS2100_purchase;
}

/*
* VEHICLE
*/

//6x engine animation
spriteset(spriteset_steam_HSM501_ani_1, "gfx/steam/HSM501.png") {
	template_2cc_58(1, 1)
}
spriteset(spriteset_steam_HSM501_ani_2, "gfx/steam/HSM501.png") {
	template_2cc_58(1, 32)
}
spriteset(spriteset_steam_HSM501_ani_3, "gfx/steam/HSM501.png") {
	template_2cc_58(1, 64)
}
spriteset(spriteset_steam_HSM501_ani_4, "gfx/steam/HSM501.png") {
	template_2cc_58(1, 96)
}
spriteset(spriteset_steam_HSM501_ani_5, "gfx/steam/HSM501.png") {
	template_2cc_58(1, 128)
}
spriteset(spriteset_steam_HSM501_ani_6, "gfx/steam/HSM501.png") {
	template_2cc_58(1, 160)
}
//tender
spriteset(spriteset_steam_HSM501_tender, "gfx/steam/HSM501.png") {
	template_2cc_48(1, 192)
}

switch(FEAT_TRAINS, PARENT, switch_steam_HSM501_animation, (motion_counter)) {
    2:      spriteset_steam_HSM501_ani_2;
    3:      spriteset_steam_HSM501_ani_3;
    4..5:   spriteset_steam_HSM501_ani_4;
    6:      spriteset_steam_HSM501_ani_5;
    7:      spriteset_steam_HSM501_ani_6;
    10:     spriteset_steam_HSM501_ani_2;
    11:     spriteset_steam_HSM501_ani_3;
    12..13: spriteset_steam_HSM501_ani_4;
    14:     spriteset_steam_HSM501_ani_5;
    15:     spriteset_steam_HSM501_ani_6;
    spriteset_steam_HSM501_ani_1;
}

switch(FEAT_TRAINS, SELF, switch_steam_HSM501_position, (position_in_vehid_chain % 2)) {
	1: spriteset_steam_HSM501_tender;
    switch_steam_HSM501_animation;
}

